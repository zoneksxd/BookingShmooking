@page
@model testprojekt.Pages.Admin.Workspaces.CreateModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Добавить рабочее пространство";
}

<h2>Добавить рабочее пространство</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Workspace.Name"></label>
        <input asp-for="Workspace.Name" class="form-control" />
        <span asp-validation-for="Workspace.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Workspace.Description"></label>
        <textarea asp-for="Workspace.Description" class="form-control"></textarea>
        <span asp-validation-for="Workspace.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Workspace.Capacity"></label>
        <input asp-for="Workspace.Capacity" class="form-control" />
        <span asp-validation-for="Workspace.Capacity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Workspace.PricePerHour"></label>
        <input asp-for="Workspace.PricePerHour" class="form-control" />
        <span asp-validation-for="Workspace.PricePerHour" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="Workspace.IsAvailable" class="form-check-input" type="checkbox" />
        <label asp-for="Workspace.IsAvailable" class="form-check-label"></label>
        <span asp-validation-for="Workspace.IsAvailable" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p class="mt-3 text-success">@Model.Message</p>
}
